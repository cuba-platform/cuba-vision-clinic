<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.cubavisionclinic.web.patients.PatientsEdit"
        datasource="patientDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.cubavisionclinic.web.patients">
    <dsContext>
        <datasource id="patientDs"
                    class="com.company.cubavisionclinic.entity.Patients"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="patientDs">
            <column width="250px">
                <field property="name"/>
                <field property="street"/>
                <field property="street2"/>
                <field property="city"/>
                <field property="state"/>
                <field property="zip"/>
                <field property="primaryPhone"
                       mask="(###) ###-####"
                       valueMode="masked"/>
                <field property="secondaryPhone"
                       mask="(###) ###-####"
                       valueMode="masked"/>
                <field property="email"/>
                <field property="policyNumber"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
